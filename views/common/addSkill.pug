extends layout

block layout-content
  .main-content
    h1.page-title Add a New Skill
    form.form-container(method="POST", action="/addSkill")
      .form-input
        label(for="name") Skill Name
        input(type="text", name="name", required=true)
      .form-input
        label(for="tagColor") Tag Color
        input(type="color", name="tagColor", required=true)
      .form-input
        label(for="subskills") Subskills (comma-separated)
        textarea(name="subskills", placeholder="React, Node.js, Express", required=true)
      .form-input
        button.btn(type="submit") Add Skill