extends layout

block layout-content
  .main-content
    h1.page-title Add a New Project
    form.form-container(method="POST", action="/addProject" enctype="multipart/form-data")
      .form-input
        label(for="name") Project Name
        input(type="text", name="name", required=true)
      .form-input
        label(for="date") Project Date
        input(type="date", name="date", required=true)
      .form-input
        label(for="description") Project Description
        textarea(name="description", required=true)
      .form-input        
        label(for="link") Project Link
        input(type="text", name="link", placeholder="https://github.com/username/repo", required=true)
      .form-input
        label(for="stack") Project Stack (comma-separated)
        textarea(name="stack", placeholder="JavaScript, React, Node.js", required=true)
      .form-input
        label(for="image") Project Image
        input(type="file", name="image", accept="image/*")
      .form-input
        button.btn(type="submit") Add Project